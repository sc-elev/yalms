@model yalms.Models.StudentMainViewModel
@{
    ViewBag.Title = "Huvudvy";
}
<div class="row">
    <div class="col-md-4">
        Uppgifter att göra
    </div>
    <div class="col-md-4">
        <h2>Idag </h2>

        <div>
            v @Model.WeekNr, @Model.Today.Year &bull; 
             @Model.WeekDay @Model.Date &bull;  @Model.SchoolClass
            @Html.ActionLink("<", "MainViewPrevDay")
            @if (DateTime.Now.Date == Model.Today)
            { 
                @Html.ActionLink("Idag", "MainViewToday")
            }
            else
            {
                <text>Idag</text>
            }
            @Html.ActionLink(">", "MainViewNextDay")
        </div>
        <div>
           
            
        </div>

        <table class="table table-striped table-condensed">
            @foreach (var slot in Model.slots)
            {
                <tr>
                    <td>@Model.SlotTimings[(int)slot.SlotNR].FormatFrom()</td>
                    <td>-</td>
                    <td>@Model.SlotTimings[(int)slot.SlotNR].FormatTo()</td>
                    <td>@slot.Course.Name </td>
                    <td>@slot.Room.Description </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-4">
        Feedback på uppgifter
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


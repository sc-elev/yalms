    <div id="newUsers" class="tab-pane fade in active">
        <div class="row">
            <div class="col-md-6">
                <br />
                <legend>Nya användare</legend>
                Sök:&nbsp; @Html.TextBox("UserSearch")
                <hr />
                @using (Html.BeginForm("UpdateUSer", "Admin"))
                {
                    <div id="updateUserPartial">
                        @{Html.RenderPartial("UpdateUserPartial", Model);}
                    </div>
                <input type="submit" class="btn btn-primary pull-right"
                       style="width:215px" value="&#x2714;&nbsp; Lägg in användare" />
                }
            </div>
            @*<div class="col-md-5">
                @using (Html.BeginForm("RemoveUser", "Admin"))
                {
                    <br />
                    <legend>Ta bort användare</legend>
                    <div class="form-group">
                        @Html.Label("Användare:",
                                    new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.SelectedUser,
                                    Model.RegisteredUsers,
                                    new { @class = "form-control" })
                    </div>
                <input type="submit" class="btn btn-danger pull-right"
                       style="width:215px" value="&#x274C;&nbsp; Ta bort användare" />
                }
            </div>*@
        </div>
    </div>


    @*Användare -----------------*@
    <div id="users" class="tab-pane fade">
        <div class="row">
            <div class="col-md-6">
                <br />
                <legend>Uppdatera användare</legend>
                <form action="#">
                    <input type="submit" value="&#x25BC;&nbsp; Välj användare"
                           class="btn btn-default" style="width:160px" />
                </form>
                <br />
                @using (Html.BeginForm("UpdateUser", "Admin"))
                {
                    <div class="form-group">
                        @Html.Label("Namn", new { @class = "col-md-2 control-label" })
                        @Html.TextBox("SelectedUserName", null,
                              new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Mejl", new { @class = "col-md-2 control-label" })
                        @Html.TextBox("SelectedEmail", null,
                              new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Telefon",
                            new { @class = "col-md-2 control-label" })
                        @Html.TextBox("SelectedPhoneNumber", null,
                              new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Behörighet",
                             new { @class = "col-md-2 control-label" })
                        <div class="row">
                            <div class="col-md-6">
                                <label>
                                    @Html.RadioButton("SelectedRole", "student")
                                    Elev
                                </label>
                                &nbsp;
                                <label>
                                    @Html.RadioButton("SelectedRole", "teacher")
                                    Lärare
                                </label>
                            </div>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-primary pull-right"
                           style="width:215px" value="&#x2714;&nbsp; Uppdatera" />
                }
            </div>
            <div class="col-md-6">
                @using (Html.BeginForm("RemoveUser", "Admin"))
                {
                    <br />
                    <legend>Ta bort användare</legend>
                    <div class="form-group">
                        @Html.Label("Användare:",
                                new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.SelectedUser,
                                Model.RegisteredUsers,
                                new { @class = "form-control" })
                    </div>
                    <input type="submit" class="btn btn-danger pull-right"
                            style="width:215px" value="&#x274C;&nbsp; Ta bort användare" />
                }
            </div>
        </div>
    </div>


    @*Kurser -----------------*@
    <div id="courses" class="tab-pane fade">
        <div class="row">
            <div class="col-md-6">
                <br />
                <legend>Skapa ny kurs</legend>
                @using (Html.BeginForm("AddCourse", "Admin"))
                {
                    <div class="form-group">
                        @Html.Label("Kursens benämning:",
                            new { @class = "control-label" })
                        <input type="text" id="NewCourse" name="NewCourse"
                                value="" class="form-control" />
                    </div>
                    <div class="form-group">
                        @Html.Label("Lärare:", new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.SelectedTeacher,
                                        Model.Teachers,
                                        new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        @Html.Label("Klass:", new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.SelectedClass,
                                        Model.Classes,
                                        new { @class = "form-control" })
                    </div>
                    <input type="submit" class="btn btn-primary pull-right"
                            style="width:215px" value="&#x2714;&nbsp; Skapa kurs" />
                }
            </div>
            <div class="col-md-6">
                <br />
                <legend>Ta bort kurs</legend>
                @using (Html.BeginForm("RemoveCourse", "Admin"))
                {
                    <div class="form-group">
                        @Html.Label("Kurs:", new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.SelectedCourse,
                                        Model.Courses,
                                        new { @class = "form-control" })
                    </div>
                    <input type=" submit" class="btn btn-danger pull-right"
                            style="width:215px" value="&#x274C;&nbsp; Ta bort kurs" />
                }
            </div>
        </div>
    </div>


    @*Klasser -----------------*@
    <div id="classes" class="tab-pane fade">
        <div class="row">
            <div class="col-md-6">
                <br />
                <legend>Skapa ny klass</legend>
                @using (Html.BeginForm("AddClass", "Admin"))
                {
                    <div class="form-group">
                        @Html.Label("Namn på klassen",
                            new { @class = "control-label" })
                        <input type="text" id="SelectedClassname"
                                name="SelectedClassname" value=""
                                class="form-control" />
                    </div>

                    <input type="hidden" id="SelectedUsers"
                            name="SelectedUsers" value="" />
                    <input type="submit" class="btn btn-primary pull-right"
                            style="width:215px" value="&#x2714;&nbsp; Skapa klass" />
                }
            </div>
            <div class="col-md-6">
                <br />
                <legend>Ta bort klass</legend>
                @using (Html.BeginForm("RemoveClass", "Admin"))
                {
                    <div class="form-group">
                        @Html.Label("Klass:",
                            new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.SelectedClass,
                                    Model.Classes,
                                    new { @class = "form-control" })
                    </div>
                    <input type="submit" class="btn btn-danger pull-right"
                            style="width:215px" value="&#x274C;&nbsp; Ta bort klass" />

                }
            </div>
        </div>
    </div>


    @*Klasslistor -----------------*@
    <div id="class_lists" class="tab-pane fade">
        <div class="row">
            <div class="col-md-6">
                <br />
                <legend>Klasslistor</legend>
                <div class="form-group">
                    @using (Html.BeginForm("ShowClassList", "Admin"))
                    {
                        @Html.Label("Klass",
                    new { @class = "col-md-2 control-label" })

                        @Html.DropDownListFor(m => m.SelectedClass,
                            Model.Classes,
                            new
                            {
                                id = "ClassDropDown",
                                @class = "form-control"
                            });
                    }
                </div>
                <div id="ClassListResults">
                    @{Html.RenderPartial("ClassList", Model);}
                </div>

            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5">
                @using (Html.BeginForm("AddClassStudents", "Admin"))
                {
                    <div class="form-group">
                        <input type="hidden" id="SelectedUsers"
                                name="SelectedUsers" value="" />
                        <input type="submit" class="btn btn-primary pull-right"
                                style="width:215px" value="&#x2714;&nbsp; Lägg till elever" />
                    </div>
                }
                <div id="studentsTree">
                    <ul>
                        <li>
                            <a href="#">Alla elever</a>
                            <ul>
                                @foreach (var index in
                                Model.StudentsByIndex.Keys)
                                {
                                    <li>
                                        <a href="#">@index</a>
                                        <ul>
                                            @foreach (var student in
                                            Model.StudentsByIndex[index])
                                            {
                                                <li id="@student.Value">
                                                    @student.Text
                                                </li>
                                            }
                                        </ul>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
